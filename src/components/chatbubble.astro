---
interface Props {
    type: "user"|"bot"
    name: string
    avatar: string
    message: string
}

const { type, name, avatar, message } = Astro.props
---
<div class=`bubble-container bubble-${type}`>
    <div class=`chat-bubble chat-${type}`>
        <div class="avatar">
            <img src={ avatar } alt={ name }>
        </div>
        <div class="message">
            <p class="name text-lg">{ name }</p>
            <p class="text text-sm">{ message }</p>
        </div>
    </div>
</div>

<script>
    class ChatBubble extends HTMLElement {
        constructor() {
            super()
        }
    }
</script>

<style>
    .bubble-container {
        width: 100%;
        display: flex;
    }
    .bubble-user {
        justify-content: flex-end;
    }
    .bubble-bot {
        justify-content: flex-start;
    }
    .chat-bubble {
        display: flex;
        flex-direction: row;
        gap: 20px;
    }
    .chat-user {
        flex-direction: row-reverse;
    }
    .avatar {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        overflow: hidden;
    }
    .avatar img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    .message {
        display: flex;
        flex-direction: column;
        gap: 5px;
        border-radius: 10px;
        color: white;
    }
    .chat-user .message {
        background-color: green;
    }
    .chat-bot .message {
        background-color: blue;
    }
</style>



