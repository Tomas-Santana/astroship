---
import Container from "@components/container.astro";
import Layout from "@layouts/Layout.astro";

import heroImage from "../assets/hero.webp";
import features1 from "assets/features_1.webp";
import features2 from "assets/features_2.webp";
import features3 from "assets/features_3.webp";

const images = [{
  src: heroImage.src,
  credit: 'Imagen de <a href="https://www.freepik.es/psd-gratis/smartphone-3d-mensajeria-texto_13677894.htm#from_view=detail_serie#position=6">Freepik</a>'
   
}, {
  src: features1.src,
  credit: 'Imagen de <a href="https://www.freepik.es/psd-gratis/engranajes-hardware-3d_13677887.htm#&position=3&from_view=collections">Freepik</a>'

}, {
  src: features2.src,
  credit: 'Imagen de <a href="https://www.freepik.es/psd-gratis/reloj-arena-transparente-3d_13677898.htm#&position=13&from_view=collections">Freepik</a>'
}, {
  src: features3.src,
  credit: 'Imagen de <a href="https://www.freepik.es/psd-gratis/piezas-rompecabezas-3d_13677910.htm#&position=24&from_view=collections">Freepik</a>',
}]
---

<Layout title="Credits">
  <Container>
    <div class="min-h-[calc(100vh-16rem)] flex items-center justify-center">
      <div class="mt-16 text-center">
        <h1 class="text-6xl font-bold">Image credits</h1>
        <div class="flex flex-wrap gap-5 items-center justify-center">
          {
            images.map((image) => (
              <div class="flex flex-col justify-center">
                <img src={image.src} alt="" width="200px" />
                <p class="text-sm text-gray-500" set:html={image.credit} />
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </Container>
</Layout>
